<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginBottom="1dp">
        <ImageView
            android:id="@+id/imgSachMuon"
            android:layout_width="80dp"
            android:layout_height="120dp"
            android:contentDescription="hinh cua listview"
            android:src="@drawable/harrypotter_stone" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txtTenSachMuon"
                android:layout_width="200dp"
                android:layout_height="18dp"
                android:layout_alignParentEnd="true"

                android:layout_alignParentTop="true"
                android:layout_marginEnd="41dp"
                android:layout_marginTop="14dp"
                android:text="UserName"
                android:textAllCaps="false"
                android:textColor="@color/colorNameHighlight"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/txtUserNameMuon"
                android:layout_width="200dp"
                android:layout_height="wrap_content"

                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/txtTenSachMuon"
                android:layout_marginTop="44dp"
                android:text="Tên Sách : "
                android:textAllCaps="false"
                android:textColor="#000000"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/txtNgayMuon"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"

                android:layout_alignStart="@+id/txtUserNameMuon"
                android:layout_marginBottom="30dp"
                android:text="Ngay Muon : "
                android:textAllCaps="false"
                android:textColor="#000000"
                android:textSize="12dp" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
