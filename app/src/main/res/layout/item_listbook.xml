<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_margin="5dp">
    <ImageView
        android:id="@+id/imgBook"
        android:layout_width="80dp"
        android:layout_height="120dp"
        android:contentDescription="hinh cua recycleview"
        android:src="@drawable/harrypotter_stone" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txtBookName"
            android:layout_width="200dp"
            android:layout_height="18dp"
            android:layout_margin="8dp"
            android:text="Tên sách : Harry Potter và chiếc cốc lửa"

            android:textAllCaps="false"
            android:textColor="@color/colorNameHighlight"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/txtAuthorName"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"

            android:layout_alignStart="@+id/txtBookName"
            android:layout_marginTop="35dp"
            android:text="Tác giả : Hồ Điêp Lam"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/txtSoLuongCon"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"

            android:layout_alignStart="@+id/txtBookName"
            android:layout_marginBottom="40dp"
            android:text="Còn lại : 5"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="12dp" />


    </RelativeLayout>
</LinearLayout>

