<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="2dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginBottom="1dp">
    <ImageView
        android:id="@+id/imgBook"
        android:layout_width="80dp"
        android:layout_height="120dp"
        android:contentDescription="hinh cua recycleview"
        android:src="@drawable/harrypotter_stone"
        android:layout_marginBottom="4dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txtBookName"
            android:layout_width="200dp"
            android:layout_height="18dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="40dp"
            android:layout_marginTop="10dp"
            android:text="Tên sách : Harry Potter và chiếc cốc lửa"
            android:textAllCaps="false"
            android:textColor="@color/colorNameHighlight"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/txtAuthorName"
            android:layout_width="145dp"
            android:layout_height="wrap_content"

            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/txtBookName"
            android:layout_marginStart="55dp"
            android:layout_marginTop="37dp"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/txtBookName"
            android:layout_marginBottom="38dp"
            android:text="Thể loại :"
            android:textColor="#000000"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/txtItemTheLoai"
            android:layout_width="146dp"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/txtBookName"
            android:layout_alignTop="@+id/textView5"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/txtBookName"
            android:layout_alignTop="@+id/txtAuthorName"
            android:text="Tác giả :"
            android:textColor="#000000"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/txtBookName"
            android:layout_marginBottom="12dp"
            android:text="Số lượng còn lại : "
            android:textColor="#000000"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/txtItemSoLuong"
            android:layout_width="89dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/textView6"
            android:layout_marginEnd="42dp"
            android:textColor="#000000"
            android:textSize="12dp" />


    </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>

